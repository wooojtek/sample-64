- extends "base.jade"
    block meta_title
        | Post
    block content
        .container
            h1.page-header Post
            article.col-md-8
                h2 {{ post.title }}
                p Posted on
                    time(datetime='{{ post.created|date:c }}')
                        | {{ post.created|date }}

                h5
                    | {% for category in post.category.all %}
                    span
                        a(href='#') {{ category.title }}
                        | &nbsp
                    | {% endfor %}
                p {{ post.description }}
                | {% for tag in post.tags.all %}
                span
                    a.label.label-default(href='#') {{ tag.name }}
                    | &nbsp
                | {% endfor %}